                    "table": {
                      "name": "products"
                    },
                    "primary": "id",
                    "joins": [],
                    "wheres": {
                      "condition": "AND",
                      "rules": [
                        {
                          "id": "products.stock_id",
                          "field": "products.stock_id",
                          "type": "string",
                          "operator": "equal",
                          "value": "{{stock_id}}",
                          "data": {
                            "table": "products",
                            "column": "stock_id",
                            "type": "text",
                            "columnObj": {
                              "type": "string",
                              "maxLength": 255,
                              "primary": false,
                              "unique": false,
                              "nullable": true,
                              "name": "stock_id"
                            }
                          },
                          "operation": "="
                        }
                      ],
                      "conditional": null,
                      "valid": true
                    },
                    "query": "SELECT amount\nFROM products\nWHERE stock_id = :P1 /* {{stock_id}} */",
                    "params": [
                      {
                        "operator": "equal",
                        "type": "expression",
                        "name": ":P1",
                        "value": "{{stock_id}}"
                      }
                    ]
